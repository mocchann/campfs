<div class="container">
  <h1>口コミ投稿</h1>
  <%= form_for [@review] do |f| %>
    <div class="form-group">
      <%= f.label :タイトル %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group" id="star">
      <%= f.label :rate, "評価" %>
      <%= f.hidden_field :rate, id: :review_rate %>
    </div>
    <div class="form-group">
      <%= f.label :口コミ内容 %>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.hidden_field :user_id, value: @review.user_id %>
    <%= f.hidden_field :field_id, value: @review.field_id %>
    <%= f.submit "保存", class: "btn btn-primary mt-3" %>
    <%#= link_to "戻る", field_path(current_user),class: "btn btn-success" %>

    <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'review[rate]',
        half: true,
      });
    </script>
  <% end %>
</div>
