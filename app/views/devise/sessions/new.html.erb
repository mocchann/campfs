<% provide(:title, "ログイン") %>
<%= flash[:alert] %>
<div class="d-flex align-items-center flex-column mt-5">
  <h2>
    <span class="page-title">L</span>
    <span class="page-title">O</span>
    <span class="page-title">G</span>
    <span class="page-title">-</span>
    <span class="page-title">I</span>
    <span class="page-title">N</span>
  </h2>
  <p class="camp-search text-center">ログイン</p>
</div>
<div class="container">
  <div class="col-md-8 text-center col-sm-12 offset-md-2 rounded shadow my-5">
    <div class="col-md-10 offset-md-1 col-sm-12 col-xs-12 pt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group form-row m-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class: "form-control col-10 px-2" %>
        </div>
        <div class="form-group form-row m-4">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control col-10 px-2" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group form-row">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="mt-4 mb-3">
          <%= f.submit t('.sign_in'), class: "session-btn btn rounded-pill w-50 m-auto my-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
