<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <%= render "shared/header", q: @q %>
    </header>
    <% if current_page?(root_path) %>
      <%= render "shared/article" %>
    <% end %>
    <nav></nav>
    <main>
      <%= yield %>
      <span id="back">
        <a href="">
          <%= image_tag asset_path('scroll_btn.jpg'), data: {"turbolinks"=>false}, class: "arrow rounded-circle" %>
        </a>
      </span>
      <%= form_with model: @contact, :url => { :controller => :home, :action => :create } do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'メッセージ*' %>
          <%= f.text_area :message, size: '10x10', class: 'form-control' %>
        </div>
        <div>
          <%= f.submit '送信' %>
        </div>
      <% end %>
    </main>
    <aside></aside>
    <footer>
      <%= render "shared/footer", user: @user %>
    </footer>
    <script>
      $(function() {
        $('#back a').on('click',function(event){
          $('body, html').animate({
            scrollTop:0
          }, 200);
          event.preventDefault();
        });
      });
    </script>
  </body>
</html>
