<div class="text-end mr-2">
    <% if current_user.blank? %>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid justify-content-end">
          <%= link_to "/users/sign_in" do %>
            <button class="btn btn-outline-success me-3" type="button">ログイン</button>
          <% end %>
          <%= link_to "/users/sign_up" do %>
            <button class="btn btn-outline-secondary" type="button">新規登録</button>
          <% end %>
        </div>
      </nav>
    <% else %>
    <div class="float-right">
      <div class="nav-item d-sm-inline-block d-none mr-3 text-black">
        <%= current_user.name %>
      </div>
      <div class="btn-group dropup mr-3">
        <div class="btn btn-secondary" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-offset="0,5">
          <% if current_user.icon_img.attached? %>
            <%= image_tag current_user.icon_img, class: "rounded-circle", size: "57x57" %>
          <% else %>
            <i class="fas fa-user-plus fa-4x ms-3"></i>
          <% end %>
        </div>
        <ul class="dropdown-menu">
          <li><%= link_to "ルーム登録", "#", class: "dropdown-item" %></li>
          <li><%= link_to "登録済みルーム一覧", "#", class: "dropdown-item" %></li>
          <li><%= link_to "予約済みルーム一覧", "#", class: "dropdown-item" %></li>
          <li><%= link_to "設定", "/users/edit", class: "dropdown-item" %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item", method: :delete %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
